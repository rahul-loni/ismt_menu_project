<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="250dp"

    android:background="#847474">
 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:padding="16dp">
     <ImageView
         android:id="@+id/nav_img"
         android:layout_width="100dp"
         android:layout_height="100dp"
         android:src="@color/black"
         android:layout_marginTop="10dp"
         />
     <TextView
         android:id="@+id/nav_txt1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="ISMT College"
         android:textColor="@color/white"
         android:textSize="22sp"
         android:layout_toRightOf="@id/nav_img"
         android:layout_marginTop="10dp"
         android:layout_marginLeft="20dp"
         android:textStyle="bold"/>
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="www.ismtcollege.com.np"
         android:textSize="22sp"
         android:textColor="@color/white"
         android:layout_below="@id/nav_txt1"
         android:layout_toRightOf="@id/nav_img"
         android:layout_marginLeft="10dp"
         android:layout_marginTop="10dp"/>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="60dp"
         android:layout_below="@id/nav_img"
         android:layout_marginTop="16dp"
         android:orientation="horizontal"
         android:gravity="center">
         <ImageView
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:src="@color/black"
             android:layout_marginRight="15dp"
             android:scaleType="centerCrop"
             />
         <ImageView
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:src="@color/black"
             android:layout_marginRight="15dp"
             />
         <ImageView
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:src="@color/black"
             android:layout_marginRight="15dp"
             />
         <ImageView
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:src="@color/black"
             android:layout_marginRight="15dp"
             />
     </LinearLayout>

 </RelativeLayout>
</LinearLayout>